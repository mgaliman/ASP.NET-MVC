@model MyProject.AdventureWorksOBP.Proizvod

@{
    ViewBag.Title = "Product Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string url = "https://localhost:44350/Products/Edit/";
    url += (@Model.IDProizvod).ToString();
}

<h2>@Model.Naziv</h2>

<a class="btn btn-primary" href="@url">Edit product</a><br><br>

<table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID proizvoda</th>
            <th>Naziv</th>
            <th>Broj proizvoda</th>
            <th>Boja</th>
            <th>Minimalna kolicina na skladistu</th>
            <th>Cijena bez PDV-a</th>
            <th>Potkategorija ID</th>
        </tr>
    </thead>
    <tbody>        
        <tr>
            <td>
                @Model.IDProizvod
            </td>
            <td>
                @Model.Naziv
            </td>
            <td>
                @Model.BrojProizvoda
            </td>
            @{
                if (Model.Boja == null)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@Model.Boja</td>
                }
            }
            <td>
                @Model.MinimalnaKolicinaNaSkladistu
            </td>
            <td>
                @Model.CijenaBezPDV
            </td>
            @{
                if (Model.PotkategorijaID == null)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@Model.PotkategorijaID</td>
                }
            }
        </tr>
        
    </tbody>
</table>