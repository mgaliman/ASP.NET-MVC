@model IEnumerable<MyProject.AdventureWorksOBP.Kategorija>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>
<a class="btn-primary btn" href="https://localhost:44350/Categories/NewCategory">Add new category</a>
<br><br>
<table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td width="40%">
                    @item.IDKategorija
                </td>
                <td>
                    <a href="https://localhost:44350/Categories/Edit/@item.IDKategorija"> @item.Naziv</a>
                </td>
            </tr>
        }
    </tbody>
</table>