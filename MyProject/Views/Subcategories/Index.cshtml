@model IEnumerable<MyProject.AdventureWorksOBP.Potkategorija>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subcategories</h2>
<a class="btn-primary btn" href="https://localhost:44350/Subcategories/NewSubcategory">Add new subcategory</a>
<br><br>
<table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Subcategory ID</th>
            <th>Category ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.IDPotkategorija
                </td>
                <td>
                    @item.KategorijaID
                </td>
                <td>
                    <a href="https://localhost:44350/Subcategories/Edit/@item.IDPotkategorija"> @item.Naziv</a>
                </td>
            </tr>
        }
    </tbody>
</table>