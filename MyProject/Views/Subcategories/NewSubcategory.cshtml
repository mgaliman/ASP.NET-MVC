@model MyProject.Views.ViewModels.CategoryAndSubcategoryDataViewModel
@{
    ViewBag.Title = "NewSubcategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Subcategory</h2>

@using (Html.BeginForm("Create", "Subcategories"))
{

<div style="margin-left:30%;">
    <div class="form-group">
        @Html.LabelFor(m => m.Potkategorija.Naziv)
        @Html.TextBoxFor(m => m.Potkategorija.Naziv, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Potkategorija.Naziv, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Potkategorija.KategorijaID)
        @Html.DropDownListFor(m => m.Potkategorija.KategorijaID, new SelectList(Model.Kategorije, "IDKategorija", "Naziv"), "Odaberite Kategoriju", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Potkategorija.KategorijaID, "", new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(m => m.Potkategorija.IDPotkategorija)
    <button class="btn btn-primary" type="submit">Add new category</button>
</div>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}